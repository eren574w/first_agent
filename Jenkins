pipeline {
    agent any

    environment {
        KUBECONFIG = credentials('vagrant-kubeconfig')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Deploy Pod') {
            steps {
                script {
                    sh 'kubectl apply -f pod.yaml'
                    sh 'kubectl get pods'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline başarıyla tamamlandı!'
        }
        failure {
            echo 'Pipeline hatalı tamamlandı!'
        }
    }
}
