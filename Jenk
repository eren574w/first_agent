pipeline {
    agent none

    stages {
        stage('Checkout') {
            agent any
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    sh 'docker build -t my-web-app .'
                    sh 'docker images'
                }
            }
        }

        stage('Deploy Pod to Kubernetes') {
            agent {
                kubernetes {
                    label 'slave'          // pod1.yaml dosyanızdaki label ile uyumlu
                    yamlFile 'pod1.yaml'
                }
            }
            steps {
                echo 'Agent pod oluşturuldu. Komutlar jnlp container içinde çalışıyor...'
                sh 'kubectl get nodes'
                sh 'kubectl get pods'
            }
        }
    }

    post {
        success {
            echo 'Pipeline başarıyla tamamlandı!'
        }
        failure {
            echo 'Pipeline hatalı tamamlandı!'
        }
    }
}
