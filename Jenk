pipeline {
    agent none

    stages {
        // 1. Checkout: Kodu çekiyoruz
        stage('Checkout') {
            agent any
            steps {
                checkout scm
            }
        }

        // 2. Docker Build: Docker imajını oluşturuyoruz
        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    sh 'docker build -t my-web-app .'
                    sh 'docker images'
                }
            }
        }

        // 3. Deploy to Kubernetes: Tek pod (tek container) üzerinde işimizi yürüteceğiz
        stage('Deploy Pod to Kubernetes') {
            agent {
                kubernetes {
                    label 'slave'          // pod.yaml dosyamızdaki label ile uyumlu
                    yamlFile 'pod1.yaml'
                }
            }
            steps {
                echo 'Agent pod oluşturuldu. Komutlar jnlp container içinde çalışıyor...'
                // Bu aşamada, pod otomatik olarak oluşturulduğundan ekstra kubectl apply gerekmiyor.
                sh 'kubectl get nodes'
                sh 'kubectl get pods'
            }
        }
    }

    post {
        success {
            echo 'Pipeline başarıyla tamamlandı!'
        }
        failure {
            echo 'Pipeline hatalı tamamlandı!'
        }
    }
}
