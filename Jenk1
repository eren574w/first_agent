pipeline {
    agent any

    environment {
        KUBECONFIG = credentials('vagrant-kubeconfig')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test Kubeconfig') {
            steps {
                script {
                    sh 'kubectl config view'
                    sh 'kubectl get nodes'
                }
            }
        }
    }
}
